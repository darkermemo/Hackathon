# MOFA SSO Backend Environment Configuration
# Copy this to .env and fill in your values

# Server
PORT=3000
NODE_ENV=development

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRATION=1h

# Nafath API Configuration
NAFATH_API_KEY=your-nafath-api-key
NAFATH_API_SECRET=your-nafath-api-secret
NAFATH_BASE_URL=https://nafath.api.gov.sa/v2
NAFATH_CALLBACK_URL=https://mofa.gov.sa/api/v1/nafath/callback

# SITE.sa MDR Integration
SITE_MDR_ENDPOINT=https://mdr.site.sa/api/v1/events
SITE_MDR_API_KEY=your-site-mdr-api-key

# Database (for production)
# DATABASE_URL=postgresql://user:password@localhost:5432/mofa_sso

# Redis (for session caching)
# REDIS_URL=redis://localhost:6379
